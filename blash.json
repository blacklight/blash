	"shellName" : "blash",
	"basepath" : "/",
	"promptText" : "[#{800}%n#{888}@#{800}%m#{888} %W] $ ",
	"promptSequences" : [
		{
			"sequence" : "%n",
			"default_text" : "blacklight",
			"text" : function ()  {
				return shell.json.user;
			},
		},
		{
			"sequence" : "%m",
			"default_text" : "localhost",
			"text" : function ()  {
				return shell.json.machine;
			},
		},
		{
			"sequence" : "%W",
			"default_text" : "~",
			"text" : function ()  {
				return shell.path;
			},
		}
	],

